if [ -e ~/.bashrc  ]
then
    . ~/.bashrc
fi

WORKBENCH=~/Workbench

export CATALINA_HOME=${WORKBENCH}/apache-tomcat-7.0.52
ANT_HOME=${WORKBENCH}/apache-ant-1.9.3
MVN_HOME=${WORKBENCH}/apache-maven-3.2.1
GRAILS_HOME=${WORKBENCH}/grails-2.3.7
export JAVA_HOME=/System/Library/Java/JavaVirtualMachines/1.6.0.jdk/Contents/Home

export PATH=${ANT_HOME}/bin:${MVN_HOME}/bin:${GRAILS_HOME}/bin:$PATH
